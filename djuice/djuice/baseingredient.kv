<ButtonBox@BoxLayout>:
    orientation: 'horizontal'
    padding: 5
    canvas.before:
        Color:
            rgba: 0, 1, .5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Button:
        text: "Previous Screen"
        size_hint: 1., .2
        on_release: app.root.current = 'test3'
    Button:
        text: "Menu Screen"
        size_hint: 1., .2
        on_release: app.root.current = 'main'
    Button:
        text: "Next Screen"
        size_hint: 1., .2
        on_release: app.root.current = 'test2'

